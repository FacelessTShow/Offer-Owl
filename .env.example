# Backend API Configuration
EXPO_PUBLIC_API_URL=http://localhost:3000/api
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/pricecompare
REDIS_URL=redis://localhost:6379

# Authentication Secrets
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google Authentication
EXPO_PUBLIC_GOOGLE_WEB_CLIENT_ID=your_google_web_client_id
EXPO_PUBLIC_GOOGLE_IOS_CLIENT_ID=your_google_ios_client_id
EXPO_PUBLIC_GOOGLE_ANDROID_CLIENT_ID=your_google_android_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Apple Authentication
EXPO_PUBLIC_APPLE_CLIENT_ID=com.pricecompare.mobile
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=PriceCompare <noreply@pricecompare.com>

# Image Recognition & Analysis
GOOGLE_CLOUD_VISION_API_KEY=your_google_vision_api_key
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Push Notifications
EXPO_PUSH_TOKEN=your_expo_push_token
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_PROJECT_ID=your_firebase_project_id

# External APIs for Price Data
AMAZON_API_KEY=your_amazon_api_key
WALMART_API_KEY=your_walmart_api_key
EBAY_API_KEY=your_ebay_api_key
SHOPEE_API_KEY=your_shopee_api_key

# Brazilian Retailers APIs
KABUM_API_KEY=your_kabum_api_key
MAGAZINE_LUIZA_API_KEY=your_magazine_luiza_api_key
SUBMARINO_API_KEY=your_submarino_api_key

# Web Scraping Configuration
PROXY_URL=your_proxy_url
USER_AGENT=Mozilla/5.0 (compatible; PriceCompareBot/1.0)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=http://localhost:19006,exp://192.168.1.100:19000
HELMET_CSP_DIRECTIVES=default-src 'self'

# Analytics & Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Caching
CACHE_TTL=3600
PRICE_UPDATE_INTERVAL=1800

# Currency Exchange
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# SMS Notifications (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number